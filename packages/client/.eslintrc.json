{
  "extends": ["react-app", "react-app/jest"],
  "rules": {
    "prefer-const": "error",
    "no-unused-vars": "warn",
    "no-console": "off",
    "react/react-in-jsx-scope": "off",
    "react/jsx-uses-react": "off"
  },
  "ignorePatterns": [
    "node_modules/**",
    "build/**",
    "dist/**",
    "coverage/**",
    "ts-sdks/**",
    "eslint.config.js"
  ]
} 